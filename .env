# 环境变量配置文件
# 此文件由 scripts/generate-env.mjs 自动生成
# 如需修改，请直接编辑此文件

# ============================================
# API配置
# ============================================
# API基础URL (生产环境需要配置完整URL，开发环境使用 '/api' 通过代理)
VITE_API_BASE_URL=/api

# API请求超时时间（毫秒）
VITE_API_TIMEOUT=10000

# API业务成功状态码
VITE_API_SUCCESS_CODE=200

# ============================================
# 应用配置
# ============================================
# 默认分页大小
VITE_DEFAULT_PAGE_SIZE=10

# 首页展示文章数量
VITE_HOME_FEATURED_LIMIT=3

# 首页展示通知数量
VITE_HOME_NOTICE_LIMIT=3

# 缓存有效期（毫秒）
VITE_CACHE_TTL=300000

# ============================================
# 开发服务器配置
# ============================================
# 开发服务器监听地址
VITE_DEV_SERVER_HOST=0.0.0.0

# 开发服务器端口
VITE_DEV_SERVER_PORT=8000

# 是否启用代理（true/false）
VITE_DEV_PROXY_ENABLED=true

# 代理目标地址（后端API地址）
VITE_DEV_PROXY_TARGET=http://localhost:10086

# 代理路径重写（如：'/backend-api'，会将 /api 重写为 /backend-api）
VITE_DEV_PROXY_REWRITE=

# ============================================
# 其他配置
# ============================================
# SCSS全局变量注入（可选）
VITE_SCSS_ADDITIONAL_DATA=
